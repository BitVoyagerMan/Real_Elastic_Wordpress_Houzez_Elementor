{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "baseUrl": "./src/client/",
    "experimentalDecorators": true,
    "rootDir": "./",
    "noImplicitAny" : false,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2015.promise",
    ],
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "checkJs": false,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./research"
  ]
}
